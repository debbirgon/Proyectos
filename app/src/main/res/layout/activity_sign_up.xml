<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.example.windows.medispenser.ui.SignUpActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2ca58d"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginLeft="0dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:srcCompat="@android:drawable/ic_menu_revert"
            app:srcCompat="@drawable/ic_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center_horizontal"
            android:text="@string/level"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorAccent" />


        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="0dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:srcCompat="@android:drawable/ic_menu_preferences"
            app:srcCompat="@drawable/ic_settings" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.75"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/user"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/et_user_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:autofillHints=""
            android:background="@drawable/rectangle_white"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="@string/user"
            android:inputType="text"
            android:maxHeight="35dp"
            android:maxLines="1"
            android:paddingVertical="4dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/pass"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/et_pass_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:autofillHints=""
            android:background="@drawable/rectangle_white"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:maxHeight="35dp"
            android:maxLines="1"
            android:paddingVertical="4dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/repeat_pass"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/et_pass_signUp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:autofillHints=""
            android:background="@drawable/rectangle_white"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:maxHeight="35dp"
            android:maxLines="1"
            android:paddingVertical="4dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/et_name_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:autofillHints=""
            android:background="@drawable/rectangle_white"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="@string/name"
            android:inputType="text"
            android:maxHeight="35dp"
            android:maxLines="1"
            android:paddingVertical="4dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/surname"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/et_surname_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:autofillHints=""
            android:background="@drawable/rectangle_white"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="@string/surname"
            android:inputType="text"
            android:maxHeight="35dp"
            android:maxLines="1"
            android:paddingVertical="4dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/birthday"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/et_birthday_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:autofillHints=""
            android:background="@drawable/rectangle_white"
            android:focusable="false"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="@string/birthday"
            android:inputType="text"
            android:maxHeight="35dp"
            android:maxLines="1"
            android:paddingVertical="4dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/sex"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rectangle_white"
            android:fontFamily="@font/comfortaa_bold">

            <Spinner
                android:id="@+id/spinner_sex_signUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginHorizontal="40dp"
		android:layout_marginVertical="20dp"
        android:layout_weight="0.25"
		android:orientation="vertical">

        <Button
	        android:id="@+id/btn_signUp"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:layout_marginHorizontal="10dp"
	        android:layout_marginBottom="10dp"
	        android:background="@drawable/rectangle_grey"
	        android:fontFamily="@font/comfortaa_bold"
	        android:text="@string/create_user"
	        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
	        android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>
